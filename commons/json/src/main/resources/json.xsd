<xs:schema
  elementFormDefault="qualified"
  targetNamespace="http://commons.safris.org/json.xsd"
  xmlns:json="http://commons.safris.org/json.xsd"
  xmlns:xs="http://www.w3.org/2001/XMLSchema">
  
  <xs:complexType name="value" abstract="true">
    <xs:sequence minOccurs="0">
      <xs:element name="description" type="xs:string"/>
    </xs:sequence>
    <xs:attribute name="array" type="xs:boolean"/>
    <xs:attribute name="required" type="xs:boolean" default="true"/>
    <xs:attribute name="null" type="xs:boolean" default="true"/>
  </xs:complexType>
  
  <xs:complexType name="name" abstract="true">
    <xs:complexContent>
      <xs:extension base="json:value">
        <xs:attribute name="name" type="xs:NCName" use="required"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="string">
    <xs:complexContent>
      <xs:extension base="json:name">
        <xs:attribute name="pattern" type="xs:string"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="number">
    <xs:complexContent>
      <xs:extension base="json:name"/>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="boolean">
    <xs:complexContent>
      <xs:extension base="json:name"/>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="object">
    <xs:complexContent>
      <xs:extension base="json:value">
        <xs:attribute name="type" type="xs:NCName" use="required"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:element name="json">
    <xs:complexType>
      <xs:sequence>
        <xs:sequence minOccurs="0">
          <xs:element name="description" type="xs:string"/>
        </xs:sequence>
        <xs:element name="object" minOccurs="0" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence maxOccurs="unbounded">
              <xs:sequence minOccurs="0">
                <xs:element name="description" type="xs:string"/>
              </xs:sequence>
              <xs:element name="value" type="json:value"/>
            </xs:sequence>
            <xs:attribute name="name" type="xs:NCName" use="required"/>
          </xs:complexType>
          <xs:unique name="uniqueValueName">
            <xs:selector xpath="./json:value"/>
            <xs:field xpath="@name"/>
          </xs:unique>
        </xs:element>
      </xs:sequence>
      <xs:attribute name="bundleName" type="xs:NCName" use="required"/>
    </xs:complexType>
    <xs:key name="keyObjectName">
      <xs:selector xpath="./json:object"/>
      <xs:field xpath="@name"/>
    </xs:key>
    <xs:keyref name="keyrefObjectName" refer="json:keyObjectName">
      <xs:selector xpath="./json:object/json:*"/>
      <xs:field xpath="@type"/>
    </xs:keyref>
  </xs:element>

</xs:schema>
<cli
  xmlns="http://commons.safris.org/cli.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://commons.safris.org/cli.xsd http://commons.safris.org/cli.xsd">
  
  <option required="true">
    <name long="dir" short="d"/>
    <argument label="PATH" use="required"/>
    <description>root PATH for geenerated Enum source</description>
  </option>
  
  <option required="true">
    <name long="file" short="f"/>
    <argument label="FILE" use="required"/>
    <description>file containing list of search tokens</description>
  </option>
  
  <option required="true">
    <name long="className" short="c"/>
    <argument label="PATH" use="required"/>
    <description>fully qualified class name of generated Enum</description>
  </option>
  
  <option required="false">
    <name long="inheritsFrom" short="i"/>
    <argument label="PATH" use="required"/>
    <description>fully qualified class name of interface</description>
  </option>
  
</cli>
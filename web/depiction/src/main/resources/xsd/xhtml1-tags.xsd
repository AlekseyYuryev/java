<xs:schema
  targetNamespace="http://www.w3.org/1999/xhtml"
  xmlns:xhtml="http://www.w3.org/1999/xhtml"
  xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:redefine schemaLocation="xhtml1-strict.xsd">
    <xs:group name="inline">
      <xs:choice>
        <xs:group ref="xhtml:inline"/>
        <xs:group ref="xhtml:taglib"/>
      </xs:choice>
    </xs:group>
  </xs:redefine>
  
  <xs:group name="taglib">
    <xs:choice>
      <xs:any namespace="##other" minOccurs="0"/>
    </xs:choice>
  </xs:group>
  
  <xs:complexType name="taglib">
    <xs:complexContent>
      <xs:extension base="xhtml:Inline"/>
    </xs:complexContent>
  </xs:complexType>
  
</xs:schema>

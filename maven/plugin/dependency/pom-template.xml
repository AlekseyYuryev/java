<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.safris.maven</groupId>
		<artifactId>plugin</artifactId>
		<version>${dev:org.safris.maven.plugin}</version>
	</parent>
	<groupId>org.safris.maven.plugin</groupId>
	<artifactId>dependency</artifactId>
	<version>${dev:org.safris.maven.plugin.dependency}</version>
	<name>${groupId}.${artifactId}</name>
	<packaging>maven-plugin</packaging>
	<description>
		Provides the capability to introspect on dependencies of artifacts.
	</description>
    <dependencies>
        <dependency>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
        </dependency>
        <dependency>
            <groupId>org.codehaus.plexus</groupId>
            <artifactId>plexus-archiver</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.codehaus.plexus</groupId>
                    <artifactId>plexus-container-default</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.codehaus.plexus</groupId>
                    <artifactId>plexus-component-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.codehaus.plexus</groupId>
            <artifactId>plexus-io</artifactId>
        </dependency>
        <dependency>
            <groupId>org.safris.commons</groupId>
			<artifactId>lang</artifactId>
			<version>${dev:org.safris.commons.lang}</version>
        </dependency>
    </dependencies>
</project>

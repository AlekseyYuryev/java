<!-- NOTE: This pom.xml can have errors! It is only used to test the sematics of the generator plugin  -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:xlink="http://www.w3.org/1999/xlink"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd http://www.w3.org/1999/xlink ../../../../../../toolkit/binding/src/main/resources/xsd/xlink.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.safris.maven.plugin.xml.binding</groupId>
  <artifactId>pom-internal</artifactId>
  <version>${dev:org.safris.maven.plugin.xml.binding.pom-internal}</version>
  <name>${groupId}.${artifactId}</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.safris.maven.plugin.xml</groupId>
        <artifactId>binding</artifactId>
        <version>${stable:org.safris.maven.plugin.xml.binding}</version>
        <executions>
          <execution>
            <phase>generate-test-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <manifest xmlns="http://xml.safris.org/toolkit/binding/manifest.xsd">
            <destdir overwrite="true">${basedir}/../../../../target/generated-sources/xmlbinding</destdir>
            <schemas>
              <schema>../xsd/maven.xsd</schema>
            </schemas>
          </manifest>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>${project.build.testSourceDirectory}/org/safris/xml/toolkit/builder/maven/test/binding</directory>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.safris.commons</groupId>
      <artifactId>util</artifactId>
      <version>${stable:org.safris.commons.util}</version>
    </dependency>
    <dependency>
      <groupId>org.safris.xml.generator</groupId>
      <artifactId>compiler</artifactId>
      <version>${stable:org.safris.xml.generator.compiler}</version>
    </dependency>
  </dependencies>
</project>

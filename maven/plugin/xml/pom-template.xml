<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.safris.maven</groupId>
		<artifactId>plugin</artifactId>
		<version>${dev:org.safris.maven.plugin}</version>
	</parent>
	<groupId>org.safris.maven.plugin</groupId>
	<artifactId>xml</artifactId>
	<version>${dev:org.safris.maven.plugin.xml}</version>
	<name>${groupId}.${artifactId}</name>
	<packaging>pom</packaging>
	<description>
		All xml related plugins.
	</description>
	<profiles>
		<profile>
			<activation>
				<property>
					<name>!task-segment:site</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.safris.maven.plugin</groupId>
						<artifactId>cobertura</artifactId>
						<version>${dev:org.safris.maven.plugin.cobertura}</version>
						<executions>
							<execution>
								<goals>
									<goal>instrument</goal>
									<goal>report</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<modules>
		<module>validator</module>
		<module>binding</module>
	</modules>
</project>
